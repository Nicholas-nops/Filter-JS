function filterByCheckBox(e) {
    const radioE = document.getElementById('radioE');
    const radioOU = document.getElementById('radioOU');
    let checksArray = [];
    checksArray.push(...e.target.value);
    if (e.target.checked == true) {
        const checkOption = e.target.value;
        const div = document.getElementById('peoples');
        if (radioE.checked == true) {
            if (devsFiltered.length > 0) {
                const filtered = devsFiltered
                    .filter(item => item.programmingLanguages
                        .some(lang => lang.language == checkOption));
                div.innerHTML = "";
                devsFiltered = filtered;
                mapUsers(filtered);
            } else {
                handleDevsFetch().then(result => {
                    const filtered = result.filter(item => item.programmingLanguages
                        .some(lang => lang.language == checkOption));
                    div.innerHTML = "";
                    mapUsers(filtered);
                })
            }
        }
    }
}







function filterByCheckBox(e) {
    const div = document.getElementById('peoples')
    const checkOption = e.target.value;
    if (devsFiltered.length > 0) {
        const filtered = devsFiltered
            .filter(item => item.programmingLanguages
                .some(lang => lang.language == checkOption));
        div.innerHTML = "";
        devsFiltered = filtered;
        mapUsers(filtered);
    } else {
        handleDevsFetch().then(result => {
            const filtered = result.filter(item => item.programmingLanguages
                .some(lang => lang.language == checkOption));
            div.innerHTML = "";
            mapUsers(filtered);
        })
    }
}

